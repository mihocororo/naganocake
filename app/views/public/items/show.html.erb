<body class="d-flex h-100 text-left text-black bg-light">
<main class="px-3">

<div class="col-md-2 offset-md-1">
<table class="table">
<h4>ジャンル一覧</h4>

<% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
<% end %>
</tbody>
</table>
</div>

<div class="text-center">
<%= image_tag @item.image, size: "200x200" %>

      <h3><%= @item.name %></h3>
      <h5><%= @item.introduction %></h5>
      <h5>￥<%= (@item.price*1.100).round %>(税込)</h5>
<%= form_with model: @cart_item, url: public_cart_items_path(item_id: @item), method: :post do |f| %>

<%= f.select :amount, (1..10).to_a, include_blank: "個数選択" %>
<%= f.submit "カートに入れる" , class: "btn btn-outline-success" %>
<% end %>
</div>

  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>
















