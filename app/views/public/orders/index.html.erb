<body class="d-flex h-100 text-left text-black bg-light">
  <main class="cover-container d-flex w-75 h-10 p-3 mx-auto flex-column">
  <h3 class="mark">注文履歴一覧</h3>
  <div class="col-md-16 offset-md-1">
  <table class="table">
    <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr></thead>
    <!--</table>-->
    <tbody>
<% @orders.each do |order| %>


<!--<table class="table">-->
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= current_customer.postal_code %><%= current_customer.address %></td>



<td>
  <% order.order_items.each do |order_item| %>
      <%= order_item.item.name %></br>
  <% end %>
  </td>

<td>
  <% order.payment_price = 0 %>
  <% order.order_items.each do |order_item| %>
  <% order.payment_price += order_item.subtotal %>
  <% end %>
      ￥<%= order.payment_price+800 %>

  </td>





      <td><%= order.order_status %></td>

      <td><%= link_to "表示する", order_path(order) %></td>
    </tr>


<% end %></table>
<%= paginate @orders %></tbody>
  </main>

