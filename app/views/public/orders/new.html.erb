<body class="d-flex h-100 text-left text-black bg-light">
  <main class="cover-container d-flex w-40 h-10 p-3 mx-auto flex-column">
  <h4 class="mark mb-5">注文情報入力</h4>
  <h5>支払方法</h5>

<% if current_customer.cart_items.present? %>
  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>

    <%= f.radio_button :pay_method,:"クレジットカード" , checked:true %>
    <%= f.label :"クレジットカード" %></br>
    <%= f.radio_button :pay_method, :"銀行振込"  %>
    <%= f.label :"銀行振込" %>



  <h5>お届け先</h5>
   <%= f.radio_button :my_address, "1", checked: true %>
             <%= f.label :"ご自身の住所"%><br>
             〒<%= current_customer.postal_code %>
             <%= current_customer.address %></br>
             <%= @name %></br>





    <%= f.radio_button :my_address, "2" %>
    <%= f.label :"新しいお届け先" %>

 <p><%= f.label :"郵便番号（ハイフンなし）",class:"col-sm-15 form-control-static" %>
    <%= f.text_field :postal_code, class:"col-sm-4 form-control-static",placeholder:"0000000" %></p></br>

 <p><%= f.label :"住所",class:"col-sm-1 form-control-static" %>
    <%= f.text_field :address, class:"col-sm-6 form-control-static",placeholder:"東京都渋谷区代々木神園町0-0",:size =>"100" %></p></br>

 <p><%= f.label :"宛名",class:"col-sm-3 form-control-static" %>
    <%= f.text_field :name, class:"col-sm-6 form-control-static",placeholder:"令和道子" %></br></p>


<div class="d-grid gap-2 col-3 mx-auto">
    <%= f.submit "確認画面へ進む", class: "btn btn-outline-primary" %>
</div>

  <% end %>
<% end %>

  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>

