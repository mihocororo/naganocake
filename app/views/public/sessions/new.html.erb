<body class="d-flex h-100 text-left text-black bg-light">
  <main class="cover-container d-flex w-40 h-10 p-3 mx-auto flex-column">
<h4>ログイン</h4>
<p class = "mark">会員の方はこちらからログイン</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row row-cols-2 mb-2">

    <div class="col"><%= f.label :メールアドレス %></div>
    <div class="col"><%= f.email_field :email, autofocus: true, autocomplete: "email",size:40 %></div>
    </div>
    <div class="row row-cols-2 mb-2">
    <div class="col"><%= f.label :パスワード %></div>
    <div class="col"><%= f.password_field :password, autocomplete: "current-password",size:40 %></div>
  </div>
  </div>


  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="actions text-center mt-4 mb-4">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<p class="mark">会員登録がお済みでない方</p>
<p><a class="link" href="/customers/sign_up">こちら</a>から新規登録を行ってください。</p>

<!--<%= render "public/shared/links" %>-->

  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>

