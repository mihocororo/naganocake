<body class="d-flex h-100 text-left text-black bg-light">
<%= form_with model: @item, url: admin_item_path, method: :patch, remote: true do |f| %>
  <main class="px-3">
    <h4 class="mark">商品編集</h4>
  <div class="container w-25 mt-5">
  <div class="row row-cols-2 mb-2">
  <div class="col">商品画像</div>
  <div class="col"><%= f.file_field :image, accept: "image/*" %></div>
  <div class="col"></div>
  </div>
  <div class="row row-cols-2 mb-2">
  <div class="col">商品名</div>
  <div class="col"><%= f.text_field :name,autocomplete: "name" %></div>
  </div>
  <div class="row row-cols-2 mb-2">
  <div class="col">商品説明</div>
  <div class="col"><%= f.text_area :introduction %></div>
  </div>
  <div class="row row-cols-2 mb-2">
  <div class="col">ジャンル</div>
  <div class="col"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></div>
  </div>
  <div class="row row-cols-2 mb-2">
  <div class="col">税抜価格</div>
  <div class="col"><%= f.text_field :price %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col"><%= f.label :販売ステータス %></div>
<div class="col"><%= f.radio_button :is_active, true,checked: true %>
<%= f.label :is_active, "販売中" %></br>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売停止中" %></div>
</div>
<th>
  <%= f.submit '変更を保存' %></th>
  <% end %>
  </main>

  <!--<footer class="text-dark-50">-->
  <!--  <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>-->
  <!--</footer>-->
</div>



  </body>
</html>









