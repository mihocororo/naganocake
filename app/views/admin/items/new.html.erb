<h1>Admin::Items#new</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

 <div class="b-example-divider"></div>
<head>
  <header class="p-3 bg-danger text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 text-white">商品一覧</a></li>
          <li><a href="#" class="nav-link px-2 text-white">会員一覧</a></li>
          <li><a href="#" class="nav-link px-2 text-white">注文履歴一覧</a></li>
          <li><a href="#" class="nav-link px-2 text-white">ジャンル一覧</a></li>
          <li><a href="#" class="nav-link px-2 text-white">ログアウト</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

      </div>
    </div>
  </header>
  </head>
  <body>
 <h4>商品新規登録</h4></br>
  <%= form_for(@item, url: admin_items_path) do |f| %>
  <a>商品名</a><%= f.text_field :name %></br>
  <a>商品説明</a><%= f.text_area :introduction %></br>
  <a>ジャンル</a><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></br>
<a>税抜価格</a><%= f.text_area :price %></br>

<tr>
<th><%= f.label :販売ステータス %></th>
<td><%= f.radio_button :is_active, true,checked: true %>
<%= f.label :is_active, "販売中" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売停止中" %></td></br>
</tr>

<th>
  <%= f.submit '新規登録' %></th>
  <% end %>

  </body>