  <h4>商品詳細</h4>

<a>商品画像</a>
<% if @item.image.attached? %>
  <%= image_tag @item.image %>
<% else %>
  <%= image_tag 'no_image',size:"200x200" %>
<% end %>


<a>商品名</a><%= @item.name %></br>
<a>商品説明</a><%= @item.introduction %></br>
<a>ジャンル</a><%= @item.genre_id %></br>
<a>税込み価格（税抜価格）</a><%= @item.price %></br>
<a>販売ステータス</a>
<% if @item.is_active== false %>販売中
      <% else %>
      販売停止中
      <% end %></br>
<%= link_to '編集する', edit_admin_item_path %>
