<body class="d-flex h-100 text-left text-black bg-light">
  <main class="px-3">

  <h4 class="mark">
  <div class="container">
    <div class="row mb-2">
    <div class="col">商品一覧</div>

  <div class="col">
    <%= link_to new_admin_item_path, class: "no-underline" do %>
  <i class="fa-solid fa-circle-plus"></i>
    <% end %>
  </div></div></div>
</h4>

  <div class="col-md-8 offset-md-1">
<table class="table">
<thead>
    <tr>
      <th>商品画像</th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      </tr></thead>
<% @items.each do |item| %>
<tr>
      <td>
        <% if item.image.attached? %>
        <%= image_tag item.image, size: "100x100" %>
        <% else %>

        <% end %></td>
      <td><%= item.id %></td>
      <td><%= link_to item.name , admin_item_path(item) ,class:"btn btn-outline-danger" %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active== false %>販売停止中
      <% else %>
      販売中


      <% end %>
<% end %>
</td></tr>
    </div>
    </tbody>
    </table>



  </main>

  <!--<footer class="mt-auto text-white-50">-->
