<body class="d-flex h-100 text-left text-black bg-light">
  <main class="px-3">

<div class="col-md-8 offset-md-1">
<table class="table">
<h4 class = "mark">会員一覧</h4>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
<% @customers.each do |customer| %>
<tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name+customer.first_name,admin_customer_path(customer),class:"btn btn-outline-danger" %></td>
      <td><%= customer.email %></td>
      <td>
      <% if customer.is_deleted== false %>有効
      <% else %>
      退会
      <% end %>
      <% end %>
      </td></tr>
      <%= paginate @customers %>




  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>









