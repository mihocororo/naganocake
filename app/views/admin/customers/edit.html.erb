<body class="d-flex h-100 text-left text-black bg-light">
  <main class="px-3">

<h4 class="mark mb-5"><%= @customer.first_name %>さんの会員情報編集</h4>
<div class="container w-75 mt-2">
  <div class="row row-cols-2 mb-2">
<div class="col">会員ID</div>
<div class="col"><%= @customer.id %></div>
</div>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :氏名 %></div>
    <div class="col"><%= f.text_field :last_name %>
    <%= f.text_field :first_name %></div>
    </div>
  <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :フリガナ %></div>
      <div class="col"><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></div>
      </div>
    <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :郵便番号 %></div>
      <div class="col"><%= f.text_field :postal_code %></div>
      </div>
    <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :住所 %></div>
      <div class="col"><%= f.text_field :address %></div>
      </div>
    <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :電話番号 %></div>
      <div class="col"><%= f.text_field :phone_number %></div>
      </div>
    <div class="row row-cols-2 mb-2">
      <div class="col"><%= f.label :メールアドレス %></div>
      <div class="col"><%= f.text_field :mail %></div>
    </div>
<div class="row row-cols-2 mb-2">
    <div class="col"><%= f.label :会員ステータス %></div>
    <div class="col"><%= f.radio_button :is_deleted, true,checked: true %>
    <%= f.label :is_deleted, "有効" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "退会" %></div>
    </div>
    <%= f.submit "変更を保存", class: "btn btn-outline-success" %>

<% end %>

  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>









