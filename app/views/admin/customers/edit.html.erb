<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>
<h3><%= @customer.first_name %>さんの会員情報編集</h3>
<td>会員ID</td>
<td><%= @customer.id %></td>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
    <tr>
      <th><%= f.label :氏名 %><br/></th>
      <td><%= f.text_field :last_name %>
    <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th><%= f.label :フリガナ %><br/></th>
      <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
    </tr>
    <tr>
      <th><%= f.label :郵便番号 %><br/></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label :住所 %><br/></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th><%= f.label :電話番号 %><br/></th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %><br/></th>
      <td><%= f.text_field :mail %></td>
    </tr>

    <th><%= f.label :会員ステータス %></th>
    <td><%= f.radio_button :is_deleted, true,checked: true %>
    <%= f.label :is_deleted, "有効" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "退会" %></td></br>
    </tr>
    <%= f.submit "変更を保存", class: "btn btn-success" %>