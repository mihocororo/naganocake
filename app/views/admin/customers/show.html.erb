<body class="d-flex h-100 text-left text-black bg-light">
  <main class="px-3">
<h4 class="mark mb-5"><%= @customer.first_name %>さんの会員詳細</h4>
<div class="container w-50 mt-2">
  <div class="row row-cols-2 mb-2">
<div class="col">会員ID</div>
<div class="col"><%= @customer.id %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">氏名</div>
<div class="col"><%= @customer.last_name %><%= @customer.first_name %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">フリガナ</div>
<div class="col"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">郵便番号</div>
<div class="col"><%= @customer.postal_code %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">住所</div>
<div class="col"><%= @customer.address %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">電話番号</div>
<div class="col"><%= @customer.phone_number %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">メールアドレス</div>
<div class="col"><%= @customer.email %></div>
</div>
<div class="row row-cols-2 mb-2">
<div class="col">会員ステータス</div>
<div class="col">
<% if @customer.is_deleted== true %>有効
<% else %>
      退会
<% end %></div>
</div>


<div class="row row-cols-2 mb-2">
<div class="col"><%= link_to "編集する",edit_admin_customer_path,class:"btn btn-outline-success" %></div>
<div class="col"><%= link_to "注文履歴一覧を見る" ,'/admin' ,class:"btn btn-outline-danger" %></div>

</div>
</div>
  </main>

