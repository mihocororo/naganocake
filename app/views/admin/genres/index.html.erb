<body class="d-flex h-100 text-left text-black bg-light">
  <main class="px-3">
  <h4 class="mark">ジャンル追加</h4>

  <%= form_for(@genre, url: admin_genres_path) do |f| %>
<div class="field">
    <%= f.label :ジャンル名 %><br />


      <%= f.text_field :name %>
  </div>

<div class="actions2">
    <%= f.submit "新規登録",class:"btn btn-outline-danger mt-5" %>

  <% end %>
</div>
  <tbody>

<div class="col-md-2 offset-md-1">
<table class="table">

<h4>ジャンル一覧</h4>
<% @genres.each do |genre| %>
    <tr>

      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) ,class:"btn btn-outline-success" %></td>

    </tr>
<% end %>
    </tbody>
    </table>


  </main>

  <footer class="mt-auto text-white-50">
    <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
  </footer>
</div>



  </body>
</html>



